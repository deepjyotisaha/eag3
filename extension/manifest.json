{
  "manifest_version": 3,
  "name": "Gmail Newsletter Digest",
  "version": "1.0",
  "description": "A Chrome extension that displays Hello World from Python backend",
  "permissions": [
    "sidePanel",
    "storage",
    "scripting"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "action": {
    "default_title": "Gmail Newsletter Digest",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
} 